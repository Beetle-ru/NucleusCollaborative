                    <DataGrid AutoGenerateColumns="True" Margin="6,43,6,6" Name="dgTable3" Width="957" Height="397" Background="#C8FFFFFF" FontSize="16" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" />
                    <Rectangle Margin="10,7,5,0" Name="rectangle4" Stroke="Black" Height="32" VerticalAlignment="Top" Fill="#7FFFECCE" />
                    <Label Content="3 группа Р≤0,030%. «Штрипсовый и судостроительный металл» Температура металла 1660 – 1680 0С." Height="33" Margin="10,6,4,0" Name="label4" VerticalAlignment="Top" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" />
