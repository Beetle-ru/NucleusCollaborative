                    <DataGrid AutoGenerateColumns="True" Margin="6,43,6,6" Name="dgTable6" Width="957" Height="397" Background="#C8FFFFFF" FontSize="16" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" />
                    <Rectangle Margin="10,7,5,0" Name="rectangle7" Stroke="Black" Height="32" VerticalAlignment="Top" Fill="#7FFFECCE" />
                    <Label Content="5 группа «IF стали». Температура металла 1700 – 1720 0С." Height="33" Margin="10,6,4,0" Name="label7" VerticalAlignment="Top" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" />
                </Grid>
            </TabItem>
            <TabItem Header="Таблица 7" Name="tabTable6">
                <Grid>
                    <DataGrid AutoGenerateColumns="True" Margin="6,43,6,6" Name="dgTable7" Width="957" Height="397" Background="#C8FFFFFF" FontSize="16" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" />
                    <Rectangle Margin="10,7,5,0" Name="rectangle8" Stroke="Black" Height="32" VerticalAlignment="Top" Fill="#7FFFECCE" />
                    <Label Content="5 группа «IF стали». Температура металла 1650 – 1670 0С." Height="33" Margin="10,6,4,0" Name="label8" VerticalAlignment="Top" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" />
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
