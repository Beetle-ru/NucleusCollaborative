                </Grid>
            </TabItem>
            <TabItem Header="Таблица 5" Name="tabTable4">
                <Grid>
                    <DataGrid AutoGenerateColumns="True" Margin="6,43,6,6" Name="dgTable5" Width="957" Height="397" Background="#C8FFFFFF" FontSize="16" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" />
                    <Rectangle Margin="10,7,5,0" Name="rectangle6" Stroke="Black" Height="32" VerticalAlignment="Top" Fill="#7FFFECCE" />
