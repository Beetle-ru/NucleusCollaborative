<UserControl x:Class="ConverterUI.Controls.NameAndValueControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             x:Name="root">
    <Grid Height="20">
        <Grid.ColumnDefinitions >
            <ColumnDefinition Width="50*"></ColumnDefinition>
            <ColumnDefinition Width="50*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Border >
            <Border BorderBrush="White" BorderThickness="1,1,0,0">
                <Border BorderBrush="Gray" BorderThickness="0,0,1,1">
                    <TextBlock Grid.Column="0" Name="tName" Background="#FFD4CFCF" TextAlignment="Center" Text="{Binding ElementName=root, Path=NameString}" DataContext="{Binding}" Padding="5,0,0,0" FontSize="12"></TextBlock>
                </Border>
            </Border>
        </Border>
        <TextBlock Grid.Column="1" Name="tValue" Foreground="Black" Background="#FF93C8A0" Text="{Binding ElementName=root, Path=Value}"  FontSize="12" Padding="5,0,0,0" Margin="0,1,0,0"></TextBlock>
    </Grid>
</UserControl>
