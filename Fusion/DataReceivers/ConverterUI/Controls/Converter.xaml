<UserControl x:Class="ConverterUI.ConverterControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             Width="150" Height="200">
    <Grid>
        <Image Canvas.Left="0" Canvas.Top="0" Height="200" Name="iConverter" Stretch="Fill" Source="/ConverterUI;component/Images/converter.png">
            <Image.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform />
                            <SkewTransform />
                            <RotateTransform Angle="{Binding Path=ConverterAngle}"/>
                            <TranslateTransform />
                        </TransformGroup>
                    </Image.RenderTransform>
            
        </Image>
    </Grid>
</UserControl>
