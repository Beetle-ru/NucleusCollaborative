<UserControl x:Class="ConverterUI.Controls.MiniBunkerControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             Name="root" mc:Ignorable="d" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" d:DesignWidth="124">
    <Grid  Background="#FFE2E2E2">
        <Grid.ColumnDefinitions >
            <ColumnDefinition Width="80*"></ColumnDefinition>
            <ColumnDefinition Width="20*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <TextBlock Grid.ColumnSpan="2" Grid.Row="0" Name="tMaterialName" Text="{Binding ElementName=root, Path=MaterialName}"  Padding="0,0,0,0" FontSize="11" Background="#FF008081" Foreground="#FFD6FFC3" TextAlignment="Center"></TextBlock>
        <TextBlock Grid.Column="0" Grid.Row="1" Name="tName" Text="{Binding ElementName=root, Path=BunkerName}"  Padding="0,0,0,0" FontSize="14" Foreground="#FF4F8C6D" TextAlignment="Center" Background="#FFE2E2E2"></TextBlock>
        <Image Grid.Column="1" Grid.Row="1" Name="iStatus" Source="{Binding ElementName=root, Path=StatusIcon}" Height="16"></Image>
    </Grid>
</UserControl>
